<div class="col-lg-3 col-md-6 mb-4">
  <div class="card">
    <div class="image-container">
      <% if fashion_product.product_image.attached? %>
        <!-- fashion_product Image -->
        <%= image_tag fashion_product.product_image, class: "card-img-top", alt: fashion_product.name %>
      <% end %>
    </div>

    <div class="card-body">
      <!-- fashion_product Name -->
      <h5 class="card-title"><%= fashion_product.name %></h5>

      <!-- fashion_product Description -->
      <p class="card-text"><%= fashion_product.usage %></p>
    </div>
  </div>
</div>